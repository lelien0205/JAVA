package demo;


public class buoi3 {
   
	public static void main(String[]args) {
	    hcn a = new hcn();
	    a.getDai();
	    a.getRong();
	    System.out.println(" Dien tich: " + a.getDientich());
	    System.out.println(" Chu vi: " + a.getChuvi());
	}
}

class hcn{
	private double dai;
  private double rong;
        
	public hcn(){
            
        }
        
        public hcn( double dai, double rong )
        {
            this.dai = dai;
            this.rong = rong;
        }
        
        public void setDai()
        {
            this.dai = dai;
        }
        
        public double getDai()
        {
            return dai;
        }
        
        public void setRong()
        {
            this.rong = rong;
        }
        
        public double getRong()
        {
            return rong;
        }
        
        public double getDientich()
        {
            return dai*rong;
        }
        
        public double getChuvi()
        {
            return (dai + rong)*2;
        }
}

